generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model pokemon {
  id                 String  @id @default(uuid())
  name               String
  fk_tipo_primario   String
  fk_tipo_secundario String?

  tipo_primario   tipo  @relation("PokemonTipoPrimario", fields: [fk_tipo_primario], references: [id])
  tipo_secundario tipo? @relation("PokemonTipoSecundario", fields: [fk_tipo_secundario], references: [id])
}

model tipo {
  id   String @id @default(uuid())
  name String

  pokemon_primario   pokemon[] @relation("PokemonTipoPrimario")
  pokemon_secundario pokemon[] @relation("PokemonTipoSecundario")
}